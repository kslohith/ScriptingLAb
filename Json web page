<script>

document.getElementById("lohith").addEventListener("mouseover",funclohith);
document.getElementById("nidhi").addEventListener("mouseover",funcnidhi);

function funclohith() {
var Obj;
document.getElementById("studentdetails").removeAttribute('hidden');
Obj = {
"usn":"1ms16is143",
"dept":"ISE"
};

my_usn = Obj.usn;
my_dept = Obj.dept;

document.getElementById("usn").innerHTML = my_usn;
document.getElementById("dept").innerHTML = my_dept;

}

function funcnidhi() {
var Obj;
document.getElementById("studentdetails").removeAttribute('hidden');

Obj = {
"usn":"1ms16is141",
"dept":"CSE"
};

my_usn = Obj.usn;
my_dept = Obj.dept;

document.getElementById("usn").innerHTML = my_usn;
document.getElementById("dept").innerHTML = my_dept;

}

</script>
